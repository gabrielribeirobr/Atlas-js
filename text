const continents = [
  { name: 'Africa', image: 'images/africa.svg' },
  { name: 'Americas', image: 'images/america.svg' },
  { name: 'Asia', image: 'images/asia.svg' },
  { name: 'Europe', image: 'images/europe.svg' },
  { name: 'Oceania', image: 'images/oceania.svg' }
];

const container = document.querySelector('.continents');

continents.forEach(continent => {
  const card = document.createElement('div');
  card.className = 'card';
  card.innerHTML = `
    <img src="${continent.image}" alt="${continent.name}" />
    <h2>${continent.name}</h2>
    <button>Explorar</button>
  `;
  card.onclick = () => {
    localStorage.setItem('selectedContinent', continent.name.toLowerCase());
    window.location.href = 'continent.html';
  };
  container.appendChild(card);
});

<div class="continent-card south-america">
    <p class="about-continent">
      A América do Sul é um continente localizado principalmente no hemisfério sul, conhecido por sua grande diversidade cultural, climática e natural. Sua principal característica é a vasta biodiversidade, concentrada especialmente na Floresta Amazônica.
    </p>
    <button class="btnRegions">América do Sul</button>
  </div>